<TEI xmlns="http://www.tei-c.org/ns/1.0" xml:lang="en" xml:id="indexing-geo">
    <teiHeader>
        <fileDesc>
            <titleStmt>
                <title>Place/geographical names</title>
                <respStmt>
                    <resp/>
                    <name/>
                </respStmt>
                <respStmt>
                    <resp/>
                    <name/>
                </respStmt>
            </titleStmt>
            <publicationStmt><p/></publicationStmt>
            <sourceDesc><p/></sourceDesc>
        </fileDesc>
    </teiHeader>
    <text>
        <body>
            <!--<div type="leiden">
